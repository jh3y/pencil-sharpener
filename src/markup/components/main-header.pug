    li.dropdown-newpen
      a(href='/pen/')
        | New Pen
    li.dropdown-newpost
      a(href='/write/')
        | New Post
    li.dropdown-activity
      a Recent Activity
    li.dropdown-embedbuilder
      a Embed Theme Builder
    li.dropdown-yoursettings
      a Settings
    li.dropdown-help
      a Help
    li.dropdown-logout.sep-after
      a#logout Log Out
    li.dropdown-profile
      a Your Profile
      .user-dropdown-quicklink-row
        a Pens
        a Posts
        a Collections
  #header-search.header-search.header-chunk
    a#header-search-button.header-search-button(href='#0')
      svg.header-icon-mag(width='25px', height='65px')
