@import url('https://fonts.googleapis.com/css?family=Lobster')

*
  transition all .25s ease


.profile-name h1
  font-family    'Lobster', cursive
  padding        15px
  text-transform uppercase
  background-color #e74c3c

  @media(max-width 551px)
    border none

.profile-badges
  top           50%
  margin-top    -14px

  .badge
    display       none

  &:after
    color         #fff
    content       'OSS'
    font-family   'Lato'
    background    #e74c3c
    display       block
    border-radius 2px
    padding       4px

    @media(max-width 551px)
      padding 2px

#profile-following
.promo-footer
  display none

#profile-followers
  &:hover
    #followers-count
      &:after
        color #fff
  span
    text-transform lowercase

#followers-count
  &:after
    transition all .25s ease
    color  #8A8A8A
    content ' Awesome '

#hire-me-button
  position relative
  width    80px
  overflow hidden

  &:after
    content 'Reach out!'
    width   100%
    position absolute
    top 0
    left 0
    color #fafafa
    background #000
    line-height 18px
    transition all .5s ease

  &:hover
    &:after
      transform translateX(100%)
      background #fff
      color      #000

@keyframes pulse
  from
    transform scale(1)
  to
    transform scale(1.05)

.profile-header
  background linear-gradient(black, white)

.profile-username
  color #000

.badge-follows
  background #000
  color      #fff !important

@keyframes change
  0%
    background #e74c3c
    color      #fff
  50%
    background #fff
    color      #e74c3c
  100%
    background #e74c3c
    color      #fff
